---
import BaseLayout from '../layouts/BaseLayout.astro'
const allPosts = await Astro.glob('../pages/post/*.md')
const pageTitle = "Blog Archive"
import { Debug } from 'astro:components';
---
<Debug posts={allPosts} />


<BaseLayout title={pageTitle}>
  <main>
    <h1>Archive</h1>
    <ul>
      {allPosts.map(post => (
      <li>
        <a href={post.url}>{post.frontmatter.title}</a>
      </li>
      ))}
    </ul>
  </main>
</BaseLayout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
